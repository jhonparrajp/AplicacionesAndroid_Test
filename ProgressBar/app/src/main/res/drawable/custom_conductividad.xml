<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Bordes redondeados -->
            <solid android:color="#FFF"/> <!-- Color del fondo -->
        </shape>
    </item>

    <item android:id="@android:id/progress" tools:ignore="StateListReachable">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/> <!-- Bordes redondeados -->
                <gradient
                    android:endColor="#CBF1F5"

                    android:startColor="#CBF1F5"
                    android:useLevel="true"/> <!-- Color del progreso -->
            </shape>
        </clip>
    </item>
</layer-list>